{
	"version": "0.2.0",
	"configurations": [
		{
            "name": "Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "${workspaceRoot}/dist-test/**/*.js",
                "--testTimeout", "60000"
            ],
            "cwd": "${workspaceRoot}/",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "externalConsole": false,
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/dist-test"
        }
	]
}